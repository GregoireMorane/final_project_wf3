{% extends "layout.html.twig" %}

{% block content %}
    <div class="bloc vert col-lg-4 col-md-4 col-sm-8 col-xs-10 col-lg-offset-1 col-md-offset-1 col-sm-offset-1 col-xs-offset-1">
        <form class="form-horizontal">
            <fieldset>
                <legend style="text-align : center;">Identifiez vous</legend>
                <div class="form-group">
                    <label class="col-md-4 control-label" for="radios">Vous êtes : </label>
                    <div class="col-md-4">
                        <div class="radio">
                            <label for="radios-0">
                            <input type="radio" name="radios" id="radios-0" value="client" checked="checked">
                            Client
                            </label>
                        </div>
                        <div class="radio">
                            <label for="radios-1">
                              <input type="radio" name="radios" id="radios-1" value="collecteur">
                              Collecteur
                            </label>
                        </div>
                        <div class="radio">
                          <label for="radios-2">
                            <input type="radio" name="radios" id="radios-2" value="admin">
                            Administrateur
                          </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" for="Identifiant">Votre identifiant</label>  
                    <div class="col-md-4">
                        <input id="Identifiant" name="Identifiant" type="text" placeholder="ex@ex.ex" class="form-control input-md">
                        <a class="help-block">Identifiant oublié</a>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" for="password">Votre mot de passe</label>  
                    <div class="col-md-4">
                        <input id="password" name="password" type="text" placeholder="mot de passe" class="form-control input-md">
                        <a class="help-block">Mot de passe oublié</a>  
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" for="submitButton"></label>
                    <div class="col-md-4">
                      <button id="submitButton" name="submitButton" class="btn btn-primary">Connexion à votre espace</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
{% endblock %}